<div class="container-fluid">
  <div class="panel panel-default">
	<div class="panel-heading">
	  <b>Edit Discovered Host</b>
        <%= link_to('', host_path, {
        :class => 'glyphicon glyphicon-eye-open pull-right',
        :title => 'Edit'
        }) %>
	</div>
	<div class="panel-body">
	  <b>IP: </b> <%= @host.ip %></br>
	  <b>MAC: </b> <%= @host.mac %>
	  <%= form_for @host do |f| %>
		<div class="field">
		  <%= label_tag :name %></br>
		  <%= f.text_field :name %>
		</div>
		<div class="field">
		  <%= label_tag :vendor %></br>
		  <%= f.text_field :vendor %>
		</div>
		<div class="field">
		  <%= label_tag :os %></br>
		  <%= f.text_field :os %>
		</div>
		<div class="field">
		  <%= label_tag :description %></br>
		  <%= f.text_area :description %>
		</div>
		<div class="actions">
		  <%= f.submit %>
		</div>
	  <% end %>
	</div>
  </div>
</div>
